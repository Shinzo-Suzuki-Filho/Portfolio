.projeto-imagem {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 6px;
    margin-bottom: 1rem;
    transition: transform 0.3s ease;
}

.projeto-imagem-ampliada {
    position: relative;
    z-index: 200;
    transform: scale(1.8);
    transition: transform 0.3s ease;
    cursor: zoom-out;
    box-shadow: 0 0 20px rgba(124, 58, 173, 0.9);
    border-radius: 10px;
}
